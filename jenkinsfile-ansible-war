pipeline{
agent any
stages 
{
stage('Build') 
{
steps{
echo "Building the Code.........."
 sh "mvn -version"
 sh "mvn clean"
}
}
stage('Test') 
{
steps{
echo "Testing the Code.........."
sh "mvn test"
}
}
stage('Compile') 
{
steps{
echo "Compiling the Project.........."
sh "mvn compile"
}
}
stage('package') 
{
steps{
echo "Compiling the Project.........."
sh "mvn package"
}
}
stage('Deploy') 
{
steps{
echo "Deploying the Project.........."
/* sh "cp /var/lib/jenkins/workspace/deploy-app/target/*.war /opt/tomcat/webapps/" */
ansiblePlaybook become: true, credentialsId: 'b84753ab-04b4-4545-a3b9-8b3c26bf2cee', disableHostKeyChecking: true, inventory: 'dev.inv', playbook: 'play.yml', vaultTmpPath: ''
}
}
}
}
